{
  "expo": {
    "name": "HIHODL",
    "slug": "hihodl-yes",
    "version": "1.0.0",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "orientation": "portrait",
    "scheme": "hihodl",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logos/HIHODL.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.CAMERA"
      ],
      "package": "com.sayhihodl.hihodlyes",
      "versionCode": 1
    },
    "ios": {
      "infoPlist": {
        "NSFaceIDUsageDescription": "HIHODL usa Face ID/Touch ID para proteger tu cuenta y autorizar transacciones de forma segura.",
        "NSCameraUsageDescription": "HIHODL usa la cámara para escanear códigos QR de direcciones de wallet y facilitar el envío de pagos.",
        "NSPhotoLibraryUsageDescription": "Permite seleccionar imágenes de códigos QR desde tu galería.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.sayhihodl.hihodlyes",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "supportsTablet": true,
      "requireFullScreen": false
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      "expo-local-authentication",
      "expo-router",
      "expo-web-browser",
      "expo-barcode-scanner",
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "minifyEnabled": true,
            "shrinkResources": true,
            "enableMinifyInReleaseBuilds": true
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "extra": {
      "EXPO_PUBLIC_SUPABASE_URL": "${EXPO_PUBLIC_SUPABASE_URL}",
      "EXPO_PUBLIC_SUPABASE_ANON_KEY": "${EXPO_PUBLIC_SUPABASE_ANON_KEY}",
      "EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID": "${EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID}",
      "EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID": "${EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID}",
      "EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID": "${EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID}",
      "EXPO_PUBLIC_ALCHEMY_API_KEY": "${EXPO_PUBLIC_ALCHEMY_API_KEY}",
      "EXPO_PUBLIC_HELIUS_API_KEY": "${EXPO_PUBLIC_HELIUS_API_KEY}",
      "EXPO_PUBLIC_API_URL": "${EXPO_PUBLIC_API_URL}",
      "EXPO_PUBLIC_FEATURE_DISCOVER": "${EXPO_PUBLIC_FEATURE_DISCOVER}",
      "EXPO_PUBLIC_PRIVY_APP_ID": "${EXPO_PUBLIC_PRIVY_APP_ID}",
      "EXPO_PUBLIC_PRIVY_CLIENT_ID": "${EXPO_PUBLIC_PRIVY_CLIENT_ID}",
      "router": {},
      "eas": {
        "projectId": "aaf7f217-c7bb-4d7d-9b4e-dd93f82d22db"
      }
    }
  }
}
